{
    "manifest_version": 3,
    "name": "Chrome Scripts",
    "version": "0.0.3",
    "description": "A command palette for your browser.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open Command Palette"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "Open Command Palette"
        },
        "toggle-leader": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "Open Leader Mode"
        }
    }
}